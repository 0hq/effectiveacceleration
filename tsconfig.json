{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "react",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": [
    "packages/lesswrong/**/*.ts",
    "packages/lesswrong/**/*.tsx"
  ],
  "types": [
      "meteor-typings"
  ]
}
