{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "react",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": [
    "packages/lesswrong/meteor-imports.d.ts",
    "packages/lesswrong/client/**/*.ts",
    "packages/lesswrong/client/**/*.tsx",
    "packages/lesswrong/components/**/*.ts",
    "packages/lesswrong/components/**/*.tsx",
    "packages/lesswrong/lib/**/*.ts",
    "packages/lesswrong/lib/**/*.tsx",
    "packages/lesswrong/platform/current/**/*.ts",
    "packages/lesswrong/platform/current/**/*.tsx",
    "packages/lesswrong/server/**/*.ts",
    "packages/lesswrong/server/**/*.tsx",
    "packages/lesswrong/testing/**/*.ts",
    "packages/lesswrong/testing/**/*.tsx",
    "packages/lesswrong/themes/**/*.ts",
    "packages/lesswrong/themes/**/*.tsx",
    "packages/**/*.js",
    "packages/**/*.jsx"
  ],
  "types": [
      "meteor-typings"
  ]
}
